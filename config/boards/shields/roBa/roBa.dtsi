#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <4>;   // 行は4本で確定
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
RC(3,5) RC(3,6) RC(2,6)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        // ★col2row（電流は 列→行 へ流れる）
        diode-direction = "col2row";

        // ★列ピン（入力側）：ここにプルダウンを入れるのがZMKの正解です
        // これで「qwer洪水（連打）」も防げます
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // D0は列専用！
            ;

        // ★行ピン（出力側）：プルダウンは入れない（出力の邪魔になるため）
        // D0を削除し、正しい4本だけにしました
        row-gpios
            = <&xiao_d 1 GPIO_ACTIVE_HIGH> // Row 0
            , <&xiao_d 2 GPIO_ACTIVE_HIGH> // Row 1
            , <&xiao_d 3 GPIO_ACTIVE_HIGH> // Row 2
            , <&xiao_d 6 GPIO_ACTIVE_HIGH> // Row 3
            ;
    };
};

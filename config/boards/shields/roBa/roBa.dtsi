#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <5>; // 親指を含めて5行
        
        // 物理的なキー配置に合わせたマップ
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  // Row 0: Q W E R T
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  // Row 1: A S D F G
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  // Row 2: Z X C V B
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  // Row 3: F4 F5 F6 F7 F8
RC(4,0) RC(4,1) RC(4,2)                  // Row 4: Thumb Keys (親指)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        // 列ピン（変更なし）
        col-gpios
            = <&xiao_d 10 GPIO_ACTIVE_HIGH>
            , <&xiao_d 9  GPIO_ACTIVE_HIGH>
            , <&xiao_d 8  GPIO_ACTIVE_HIGH>
            , <&xiao_d 5  GPIO_ACTIVE_HIGH>
            , <&xiao_d 4  GPIO_ACTIVE_HIGH>
            ;

        // ★行ピン（解析完了！これが正解の順序です）
        row-gpios
            = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0 (QWE)
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1 (ASD)
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2 (ZXC)
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3 (F4)
            , <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 4 (Thumb)
            ;
    };
};

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <4>; // 物理的な行は4本で確定
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                  // Q W E R T
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                  // A S D F G
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                  // Z X C V B
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                  // F4 F5 F6 F7 F8
RC(3,5) RC(3,6) RC(2,6)                                  // 親指 (D7, D0, D0の別行?)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        // ★col2row（実績のある向き）
        diode-direction = "col2row";

        // ★列ピン（7本）：D0はこっち専用にします！
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 0
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 1
            , <&xiao_d 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 2
            , <&xiao_d 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 3
            , <&xiao_d 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 4
            , <&xiao_d 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 5 (Thumb1)
            , <&xiao_d 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 6 (Thumb2)
            ;

        // ★行ピン（4本）：D0を削除しました！
        // ただし、連打防止のために「PULL_DOWN」は残しています（ここがChatGPT案との違い）
        row-gpios
            = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0 (QWE)
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1 (ASD)
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2 (ZXC)
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3 (F4/Thumb)
            ;
    };
};

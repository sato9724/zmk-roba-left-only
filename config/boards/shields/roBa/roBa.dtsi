#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        // ★ 正解：row → col
        diode-direction = "row2col";

        // ★ 列（入力）：ACTIVE_LOW + PULL_UP
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 9  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 8  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 5  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;

        // ★ 行（出力）：PULLなし
        row-gpios
            = <&xiao_d 2 GPIO_ACTIVE_HIGH> // Row0 (QWE)
            , <&xiao_d 3 GPIO_ACTIVE_HIGH> // Row1 (ASD)
            , <&xiao_d 1 GPIO_ACTIVE_HIGH> // Row2 (ZXC)
            , <&xiao_d 6 GPIO_ACTIVE_HIGH> // Row3 (Thumb)
            ;
    };
};

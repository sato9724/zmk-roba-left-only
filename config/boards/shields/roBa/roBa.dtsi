#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <4>;
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                  // Q W E R T
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                  // A S D F G
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                  // Z X C V B
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                  // F4 F5 F6 F7 F8
RC(3,5) RC(3,6) RC(2,6)                                  // 親指 (D7, D0, D0の別行?)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        // ★col2row（これが正解）
        diode-direction = "col2row";

        // ★列ピン（入力）：念のためここにもプルダウンを入れて最強ガードにします
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // 親指1
            , <&xiao_d 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // 親指2,3
            ;

        // ★行ピン（出力）：【最重要】連打を止めるためにプルダウンを復活させます！
        // 順序は解析結果の通り D1, D2, D3, D6 です
        row-gpios
            = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0 (QWE)
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1 (ASD)
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2 (ZXC)
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3 (F4/Thumb)
            ;
    };
};

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>; // roBaのメインキーは5列
        rows = <5>;    // 親指キーを含めて5行と想定
        // このマップは物理的なキーの並び順（0,0が左上）を表します
        // もしキーがズレたらここを調整します
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        // ★roBaは col2row が一般的です
        diode-direction = "col2row";

        // ★XIAO BLEのGPIOピン番号 (D4,D5,D10,D9,D8が列、D0,D1,D2,D3,D6が行)
        // D4が一番左端の列ピン、D8が一番右端の列ピンと仮定
        col-gpios
            = <&xiao_d 4 GPIO_ACTIVE_HIGH>  // COL0
            , <&xiao_d 5 GPIO_ACTIVE_HIGH>  // COL1
            , <&xiao_d 10 GPIO_ACTIVE_HIGH> // COL2
            , <&xiao_d 9 GPIO_ACTIVE_HIGH>  // COL3
            , <&xiao_d 8 GPIO_ACTIVE_HIGH>  // COL4
            ;

        row-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW0
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW1
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW2
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW3
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW4 (親指キーなど)
            ;
    };
};

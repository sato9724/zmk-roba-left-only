#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <4>;
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        // ★ChatGPTの提案：ダイオードの向きを逆に変更
        diode-direction = "row2col";

        // ★列ピン：こちらに入力検知用の「プルダウン抵抗」を移動
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

        // ★行ピン：こちらは出力のみにする（プルダウン削除）
        // QWEが反応した「D2」を先頭に配置
        row-gpios
            = <&xiao_d 2 GPIO_ACTIVE_HIGH> // Row 0 (QWE...)
            , <&xiao_d 3 GPIO_ACTIVE_HIGH> // Row 1 (ASD...)
            , <&xiao_d 1 GPIO_ACTIVE_HIGH> // Row 2 (ZXC...)
            , <&xiao_d 6 GPIO_ACTIVE_HIGH> // Row 3 (Thumb)
            ;
    };
};

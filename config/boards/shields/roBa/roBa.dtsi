#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <6>; // 念のため6行でテスト
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  // Row 0 (D3) -> Q W E R T (ここは動く)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  // Row 1 (D6) -> A S D F G (★本命: A行はD6かも？)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  // Row 2 (D2) -> Z X C V B (★本命: Z行はD2かも？)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  // Row 3 (D1) -> 1 2 3 4 5 (★本命: 親指はD1かも？)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)  // Row 4 (D0) -> 6 7 8 9 0 (予備: もしAを押して6が出たらD0が正解)
RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)  // Row 5 (D7) -> Y U I O P (予備: もしAを押してYが出たらD7が正解)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        // 列ピン（確定済み）
        col-gpios
            = <&xiao_d 10 GPIO_ACTIVE_HIGH>
            , <&xiao_d 9 GPIO_ACTIVE_HIGH>
            , <&xiao_d 8 GPIO_ACTIVE_HIGH>
            , <&xiao_d 5 GPIO_ACTIVE_HIGH>
            , <&xiao_d 4 GPIO_ACTIVE_HIGH>
            ;

        // ★行ピン（並び替え＆全投入！）
        row-gpios
            = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 0 (QWE)
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1 (ASD?)
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2 (ZXC?)
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3 (Thumb?)
            , <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 4 (予備)
            , <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 5 (予備)
            ;
    };
};

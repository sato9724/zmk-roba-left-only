#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <5>;
        
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                  // Q W E R T
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                  // A S D F G
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                  // Z X C V B
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                  // F4 F5 F6 F7 F8
RC(3,5) RC(3,6) RC(2,6)                                  // 親指 (D7, D0, D0の別行?)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        // ★列ピン（7本フル装備）
        // D5, D4, D0 は overlay でロック解除したので動くはずです！
        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 0
            , <&xiao_d 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 1
            , <&xiao_d 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 2
            , <&xiao_d 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 3 (R, F, V...)
            , <&xiao_d 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 4 (T, G, B...)
            , <&xiao_d 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 5 (Thumb 1)
            , <&xiao_d 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Col 6 (Thumb 2, 3)
            ;

        // ★行ピン（確定済み）
        row-gpios
            = <&xiao_d 1 GPIO_ACTIVE_HIGH> // Row 0 (QWE)
            , <&xiao_d 2 GPIO_ACTIVE_HIGH> // Row 1 (ASD)
            , <&xiao_d 3 GPIO_ACTIVE_HIGH> // Row 2 (ZXC)
            , <&xiao_d 6 GPIO_ACTIVE_HIGH> // Row 3 (F4)
            , <&xiao_d 0 GPIO_ACTIVE_HIGH> // Row 4 (予備)
            ;
    };
};
